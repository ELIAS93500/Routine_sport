{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}


{% block body %}

	<body>


		<!--=================================
				inner banner -->
		<div class="header-inner bg-light text-center">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h2 class="text-primary">CONNEXION</h2>
						<ol class="breadcrumb mb-0 p-0">
							<li class="breadcrumb-item">
								<a href="{{path('app_home')}}">
									Accueil
								</a>
							</li>
							<li class="breadcrumb-item active">
								<i class="fas fa-chevron-right"></i>
								<span>
									Connexion
								</span>
							</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
		<!--=================================
				inner banner -->

		<!--=================================
				Signin -->
		<section class="space-ptb">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-8 col-lg-10 col-md-12">
						<div class="login-register">
							<div class="section-title">
								<h4 class="text-center">CONNEXION</h4>
							</div>

							<!-- Section Connexion -->
							<div class="row">
								<div class="col-md-8 mx-auto">
									<form method="post" class="mt-1">
										{% if error %}
											<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}

										<label for="inputEmail" class="mb-2">Email</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" autocomplete="email" required autofocus>

										<label for="inputPassword" class="mb-2">Mot de passe</label>
										<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

										<div class="d-flex justify-content-between align-items-center mt-4">
											<button class="btn btn-lg btn-primary" type="submit">
												Connexion
											</button>
											<a href="{{ path('reset_password') }}" class="ml-2">Mot de passe oubli√© ?


											</div>
										</div>
									</div>
								</div>
							</section>
							<!--=================================
									Signin -->

							

							<!--=================================
									Back To Top-->
							<div id="back-to-top" class="back-to-top">
								<i class="fas fa-angle-up"></i>
							</div>
							<!--=================================
									Back To Top-->

							<!--=================================
									Javascript -->

							<!-- JS Global Compulsory (Do not remove)--><script src="js/jquery-3.6.0.min.js"> </script>
							<script src="js/popper/popper.min.js"></script>
							<script src="js/bootstrap/bootstrap.min.js"></script>

							<!-- Template Scripts (Do not remove)-->
							<script src="js/custom.js"></script>

						</body>
					</html>
				{% endblock %}
