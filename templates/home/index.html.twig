						<div class="text-primary font-weight-bold display-6 ">
							<p>{{ formule.prix }}€</p>
						</div>
						<div class="employers-list-details">
							<div class="employers-list-info">
								<div>
									<h5 class="mb-3">
										<a href="#">{{ formule.type }}</a>
