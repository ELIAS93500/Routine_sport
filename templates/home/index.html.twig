{% extends 'base.html.twig' %}

{% block title %}Accueil

{% endblock %}


{% block body %}
<!--=================================
			Banner -->
<section class="banner banner-bg-video bg-holder bg-overlay-black-30">
	<video playsinline autoplay muted loop style="position: absolute; z-index: 0; width: 100%; top:0;height: max-content;">
		<source src="{{asset('assets/video/video.mp4')}}" type="video/mp4">
	</video>
	<div class="container">
		<div class="row justify-content-start">
			<div class="col-md-6 align-self-center position-relative">
				<h1 class="text-white mb-2">Trouve ton club idéal ou le coach parfait, c'est par ici !!</h1>

				<a href="{{ path('app_home') }}#annonces" class="btn btn-primary btn-lg">
					Annonces</a>
			</div>
			<div class="col-md-6">
				<div class="bg-overlay-black-50 p-lg-5 p-4 ms-0 ms-md-5 mt-4 mt-md-0 job-search-form">
					<div class="position-relative">
						<div class="job-search-field">
							<div class="job-search-item">
								<form class="form row">
									<div class="col-12">
										<div class="mb-3">
											<div class="d-flex">
												<label class="text-white form-label">Qui</label>

											</div>
											<div class="position-relative left-icon">
												<input type="text" class="form-control" name="job_title" placeholder="Nom du coach ou du club">
												<i class="fas fa-search"></i>
											</div>
										</div>
										<div class="mb-3">
											<div class="d-flex">
												<label class="text-white form-label">Où</label>

											</div>
											<div class="position-relative left-icon">
												<input type="text" class="form-control location-input" name="job_title" placeholder="Ville, Code Postal ou Région">
												<i class="far fa-compass"></i>
												<a href="#">
													<div class="detect">
														<span class="d-none d-sm-block">Localiser</span>
														<i class="fas fa-crosshairs"></i>
													</div>
												</a>
											</div>
										</div>
										<div class="mb-3 form-action mb-0">
											<button type="submit" class="btn btn-primary btn-lg mt-3">
												<i class="fas fa-search"></i>
												Recherche</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!--=================================
			Banner -->

<!--=================================
			Easiest Way to Use -->
<section class="space-ptb">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<div class="feature-info-03 text-center">
					<div class="feature-info-image bg-overlay-gradient-03 bg-holder" style="background-image: url(images/about/about-05.jpg)"></div>
					<div class="feature-info-content">
						<h5 class="mb-3 feature-info-title">Tous</h5>
						<p class="mb-0">Toutes les categories</p>
						<a class="btn btn-outline-primary mt-4" href="{{ path('app_home') }}">Voir tous</a>


					</div>
				</div>
			</div>
			{% for category in categories %}
				<div class="col-md-4">
					<div class="feature-info-03 text-center">
						<div class="feature-info-image bg-overlay-gradient-03 bg-holder"></div>
						<div class="feature-info-content">
							<h5 class="mb-3 feature-info-title">{{category.name}}</h5>
							<p class="mb-0">Je recherche un(e)
								{{category.name}}</p>
							<a class="btn btn-outline-primary mt-4" href="{{ path('app_home', {'filter': category.id}) }}">Filtrer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
<!--=================================
			Easiest Way to Use -->

<!--=================================
			Jobs-listing -->
<section class="space-ptb bg-light">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col">
				<div class="section-title-02 text-center mb-4 mb-md-5">
					<h2 id="annonces">ANNONCES</h2>
					<p class="mb-0">Les annonces des coachs et des clubs se trouvent juste en dessous.</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for produit in produits %}
				<div class="col-lg-4 col-md-6">

					<img src=" {{ asset('assets/upload/') }}{{produit.media1}} " class="card-img-top" alt=" {{produit.name}} " height="280">
					<div class="job-list job-grid">
						<div class="job-list-details">
							<div class="job-list-info">
								<div class="job-list-title">
									<h5 class="mb-0">
										<a href="{{path('produit_show' , {id:produit.id})}}">{{ produit.name }}</a>
									</h5>
								</div>
								<div class="job-list-option">
									<ul class="list-unstyled">
										<li>

											<p>{{ produit.description|length > 100 ? produit.description|slice(0, 100) ~
											'...' : produit.description }}</p>
										</li>
										<li>
											<i class="fas fa-map-marker-alt pe-1"></i>
											{{ produit.city }}
										</li>
										<li></li>
									</ul>
								</div>
							</div>
						</div>
						<div class="job-list-favourite-time">
							<a class="job-list-favourite order-2" href="#">
								<i class="fas fa-heart"></i>
							</a>
							<span class="job-list-time order-1">
								<i class="far fa-clock pe-1"></i>
								{{ produit.dateStart| date('Y-m-d') }}</span>
						</div>
					</div>
				</div>
			{% endfor %}
			<div class="row">
				<div class="col text-center">
					<button type="submit" class="btn btn-outline-primary">
						Voir toutes les annonces
					</button>
				</div>
			</div>
		</div>
	</section>
	<!--=================================
						Jobs-listing -->

	<!--=================================
						About -->
